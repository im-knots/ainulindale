{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ainulindale",
  "version": "0.1.0",
  "identifier": "com.ainulindale.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Ainulindale - AI Operations Control Center",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Gamified UI for managing AI agent swarms",
    "longDescription": "Ainulindale is an AI Operations Control Center - a strategy game interface for designing, deploying, and monitoring AI agent swarms that do real enterprise work."
  }
}
